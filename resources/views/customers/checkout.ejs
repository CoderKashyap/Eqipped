    <script>
        function callAjaxa() {
            var pincode = $('#pincode').val();
            if ($('#pincode').val().length != 6) {

                $('#city').val('');
                $('#state').val('');
                $('#country').val('');
            }
            else {
                $.ajax({
                    url: "/pincodeAjax/",
                    type: "POST",
                    data: "pincode=" + pincode,
                    success: function (obj) {
                        if (obj == '') {
                            $('#city').val('');
                            $('#state').val('');
                            $('#country').val('');
                        }
                        $('#city').val(obj.city);
                        $('#state').val(obj.state);
                        $('#country').val(obj.country);
                    },
                    error: function () {
                        $('#city').val('');
                        $('#state').val('');
                        $('#country').val('');
                    }
                })
            }
        }

    </script>

